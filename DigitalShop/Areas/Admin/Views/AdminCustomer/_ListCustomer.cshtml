@model List<DigitalShop.Models.CustomerViewModel>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                List Customer
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>
                                    User Name
                                </th>
                                <th>
                                    Display Name
                                </th>
                                <th>
                                    Phone
                                </th>
                                <th>
                                    Address
                                </th>
                                <th>
                                    Status
                                </th>
                                <th>
                                    Action
                                </th>
                            </tr>
                        </thead>
                        @if (Model.Count() != 0)
                        {
                            <tbody>
                                @foreach (var item in Model)
                                {

                                <tr class="odd gradeX">
                                    <td>
                                        @Html.DisplayFor(modelItem => item.UserName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DisplayName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Phone)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Address)
                                    </td>
                                    <td>
                                        @if (item.Status == true)
                                        {
                                            <p style="color:darkgreen">Activate</p>
                                        }
                                        else
                                        {
                                            <p style="color:red">Deactivate</p>
                                        }
                                    </td>
                                    <td>
                                        <button type="button" class="btn-success" onclick="Activate(@item.Id)">Activate</button>
                                        <button type="button" class="btn-danger" onclick="Deactive(@item.Id)">Deactivate</button>
                                    </td>
                                </tr>

                                }
                            </tbody>
                        }
                    </table>
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
</div>

<script type="text/javascript">
    function GetData() {
        $.ajax({
            async: true,
            method: "GET",
            dataType: "html",
            url: '@Url.Action("GetListCustomer", "AdminCustomer")',
                data: {},
                success: function (response) {
                    $("#contentAdmin").html("");
                    $("#contentAdmin").html(response);
                },
                error: function () {
                    alert('error !');
                }
            });
    };

    function Deactive(id) {
        $.ajax({
            async: true,
            method: "Get",
            dataType: "html",
            url: '@Url.Action("Deactivate", "AdminCustomer")',
            data: {id : id},
            success: function () {
                alert('Deactivate successfullly !');
                GetData();
            }
        })
    };

     function Activate(id) {
        $.ajax({
            async: true,
            method: "Get",
            dataType: "html",
            url: '@Url.Action("Activate", "AdminCustomer")',
            data: {id : id},
            success: function () {
                alert('Activate successfullly !');
                GetData();
            }
        })
    };

</script>

<script>
    $(document).ready(function () {
        $('#dataTables-example').DataTable({
            responsive: true
        });
    });
</script>

