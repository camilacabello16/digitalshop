        function admin() {
            $.ajax({
                    method: "get",
                    url: '@Url.Action("GetListAdmin", "AdminManagement",new { area = "Admin"})',
                    data: {},
                    success: function (response) {
                        if (response==null) {
                            alert("Your account doesn't have permisstion !");
                        }
                        else {
                            
                            $("#contentAdmin").html("");
                            $("#contentAdmin").html(response);
                        }
                        
                    }
                });
        }

        function changePassWord() {
            $("#changePassWord").modal("show");
        }

        function submitChangePassWord() {
            var messageChangePassWord = @ViewBag.MessageChangePassWord
            $.ajax({
                method: "post",
                url: '@Url.Action("ChangePassWord", "AdminManagement",new { area = "Admin"})',
                data: {
                    userName: '@User.Identity.Name',
                    newPassWord: $("#newPassWord").val(),
                    confirmNewPassWord: $("#confirmNewPassWord").val()
                },
                success: function (response) {
                        if (response == true) {
                            alert("Successfully !");
                            $("#newPassWord").val("");
                            $("#confirmNewPassWord").val("");
                        }
                        else {
                            alert("Error! Please try again")
                        }
                    }
            });
        }

