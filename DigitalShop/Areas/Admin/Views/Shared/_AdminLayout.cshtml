        $(document).ready(function () {
            console.log($("#frmChangePassWordAdmin").valid());
            $("#frmChangePassWordAdmin").change(function () {
                if ($("#frmChangePassWordAdmin").valid()) {
                    $('#btnChangePassWord').prop('disabled', false);
                }
                else {
                    $('#btnChangePassWord').prop('disabled', true);
                }
            });

        });

    </script>
