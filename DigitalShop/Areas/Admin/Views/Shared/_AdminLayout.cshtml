        <form id="frmChangePassWordAdmin">
            <div class="modal fade" id="changePassWord" role="dialog">
                <div class="modal-dialog modal-lg">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                            <h4 class="modal-title">@User.Identity.Name</h4>
                        </div>
                        <div class="modal-body">
                            <div class="form-horizontal">
                                <div class="form-group">
                                    <label class="control-label col-md-2">New PassWord</label>
                                    <div class="col-md-10">
                                        <input class="form-control" name="newPassWord" type="password" autofocus id="newPassWord">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-2">Confirm New PassWord</label>
                                    <div class="col-md-10">
                                        <input class="form-control" name="confirmNewPassWord" type="password" autofocus id="confirmNewPassWord">
                                    </div>
                                </div>

                                <div class="modal-footer">
                                    <button type="button" disabled onclick="submitChangePassWord()" class="btn btn-primary" data-dismiss="modal" id="btnChangePassWord">Save</button>
                                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
