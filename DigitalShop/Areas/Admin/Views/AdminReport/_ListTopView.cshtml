@model List<DigitalShop.Models.ProductViewModel>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Top View
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="dataTable_wrapper">
                        @*@Html.Label("StartDate", null, new { @class = "control-label col-md-1" })
                        <div class="col-md-3">
                            <input type="date" class="subcontent__input form-control" id="startDate" >
                        </div>
                        @Html.Label("EndDate", null, new { @class = "control-label col-md-1" })
                        <div class="col-md-3">
                            <input type="date" class="subcontent__input form-control" id="endDate" >
                        </div>
                        <button type="submit" onclick="submitTopView()" class="btn btn-primary col-md-1" id="btnShowTopView" style="margin-bottom:50px">Show</button>*@
                        <table class="table table-striped table-bordered table-hover" id="dataTables-example" >
                            <thead>
                                <tr>
                                    <th>
                                        Name
                                    </th>

                                    <th>
                                        Image
                                    </th>
                                    <th>
                                        Price
                                    </th>
                                    <th>View</th>
                                    <th>Quantity</th>
                                    <th>Activate</th>
                                </tr>
                            </thead>
                            @if (Model.Count() != 0)
                            {
                                <tbody>
                                    @foreach (var item in Model)
                                    {

                                        <tr class="odd gradeX">
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Name)
                                            </td>
                                            <td>
                                                <img src="@item.AvatarImage" width="35" height="70" />
                                            </td>
                                            <td>@Html.DisplayFor(modelItem => item.PriceOut)</td>
                                            <td>@Html.DisplayFor(modelItem => item.ViewCount)</td>
                                            <td>@Html.DisplayFor(modelItem => item.Quantity)</td>
                                            <td>
                                                @if (item.Status == true)
                                                {
                                                    <p style="color:darkgreen">Activate</p>
                                                }
                                                else
                                                {
                                                    <p style="color:red">Deactivate</p>
                                                }
                                            </td>
                                        </tr>

                                    }
                                </tbody>
                            }
                        </table>
                    </div>
                    <!-- /.table-responsive -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
    </div>

    <script>
        //$(document).ready(function () {
        //    $('#dataTables-example').DataTable({
        //        responsive: true
        //    });

        //});

        function submitTopView() {
            $.ajax({
                async: true,
                method: "Post",
                url: '@Url.Action("GetTopView", "AdminReport")',
                success: function (response) {
                    $("#contentAdmin").html("");
                    $("#contentAdmin").html(response);
                }
            });
        };
    </script>

