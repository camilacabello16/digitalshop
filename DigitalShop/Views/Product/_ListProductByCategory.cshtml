@model DigitalShop.Models.ProductByCategoryViewModel;
@{
    ViewData["Title"] = "_ListProductByCategory";
    Layout = "~/Views/Shared/_WebLayout.cshtml";
}
<div id="webcontent">
    <!-- page -->
    <div class="services-breadcrumb">
        <div class="agile_inner_breadcrumb">
            <div class="container">
                <ul class="w3_short">
                    <li>
                        <a href="/Home/Index">Home</a>
                        <i>|</i>
                    </li>
                    @if (ViewBag.CategoryName != null)
                    {
                        <li>
                            @ViewBag.CategoryName
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
    <!-- //page -->
    <!-- top Products -->
    <div class="ads-grid py-sm-5 py-4">
        <div class="container py-xl-4 py-lg-2">
            <!-- tittle heading -->
            <h3 class="tittle-w3l text-center mb-lg-5 mb-sm-4 mb-3">
                <span>@ViewBag.CategoryName</span>
            </h3>
            <!-- //tittle heading -->
            <div class="row">
                <!-- product left -->
                <div class="agileinfo-ads-display col-lg-9">
                    <div class="wrapper">
                        <!-- first section -->

                        <div class="product-sec1 px-sm-4 px-3 py-sm-5  py-3 mb-4">
                            <div class="row">
                                @foreach (var item in Model.ListProductViewModel)
                                {
                                    <div class="col-md-4 product-men">
                                        <div class="men-pro-item simpleCart_shelfItem">
                                            <div class="men-thumb-item text-center">
                                                <img src="@item.AvatarImage" alt="" style="height:200px; width:200px">
                                                <div class="men-cart-pro">
                                                    <div class="inner-men-cart-pro">
                                                        <a href="/Product/Index/@item.Id" class="link-product-add-cart">Quick View</a>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="item-info-product text-center border-top mt-4">
                                                <h4 class="pt-1">
                                                    <a href="/Product/Index/@item.Id">@item.Name</a>
                                                </h4>
                                                <div class="info-product-price my-2">
                                                    <span class="item_price">$@item.PriceOut</span>
                                                    <del>$@(item.PriceOut + 60)</del>
                                                </div>
                                                <div class="snipcart-details top_brand_home_details item_add single-item hvr-outline-out">
                                                    <form action="#" method="post">
                                                        <fieldset>
                                                            <input type="hidden" name="cmd" value="_cart" />
                                                            <input type="hidden" name="add" value="1" />
                                                            <input type="hidden" name="business" value=" " />
                                                            <input type="hidden" name="item_name" value="@item.Name" />
                                                            <input type="hidden" name="amount" value="@item.PriceOut" />
                                                            @*<input type="hidden" name="discount_amount" value="1.00" />*@
                                                            <input type="hidden" name="currency_code" value="USD" />
                                                            <input type="hidden" name="return" value=" " />
                                                            <input type="hidden" name="cancel_return" value=" " />
                                                            <input type="submit" name="submit" value="Add to cart" class="button btn" />
                                                        </fieldset>
                                                    </form>
                                                </div>

                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>

                        <!-- //first section -->
                    </div>
                </div>
                <!-- //product left -->
                <!-- product right -->
                <div class="col-lg-3 mt-lg-0 mt-4 p-lg-0">
                    <div class="side-bar p-sm-4 p-3">
                        <div class="search-hotel border-bottom py-2">
                            <h3 class="agileits-sear-head mb-3">Brand</h3>
                            @*<form action="#" method="post">
                                    <input type="search" placeholder="Search Brand..." name="search" required="">
                                    <input type="submit" value=" ">
                                </form>*@
                            <div class="w3l-range">
                                <ul>
                                    <li class="itemClick">
                                        <a href="@Url.Action("GetListProductByCategory","Product", new { @categoryName = ViewBag.CategoryName,@minPrice= ViewBag.MinPrice,@maxPrice= ViewBag.MaxPrice})">All</a>
                                    </li>
                                    @foreach (var item in Model.ListManufacturer)
                                    {
                                        <li class="chooseItem">
                                            <a href="@Url.Action("GetListProductByCategory","Product", new { @categoryName = ViewBag.CategoryName,@manufacturerId = item.Id,@minPrice= ViewBag.MinPrice,@maxPrice= ViewBag.MaxPrice })">@item.Name</a>
                                        </li>
                                    }
                                </ul>
                            </div>
                        </div>

                        <!-- price -->
                        <div class="range border-bottom py-2">
                            <h3 class="agileits-sear-head mb-3">Price</h3>
                            <div class="w3l-range">
                                <ul>
                                    <li>
                                        <a href="@Url.Action("GetListProductByCategory","Product", new { @categoryName = ViewBag.CategoryName,@manufacturerId = ViewBag.ManufacturerId })">All</a>
                                    </li>
                                    <li>
                                        <a href="@Url.Action("GetListProductByCategory","Product", new { @categoryName = ViewBag.CategoryName,@manufacturerId = ViewBag.ManufacturerId,@minPrice =0,@maxPrice=200 })">Under $200</a>
                                    </li>
                                    <li class="my-1">
                                        <a href="@Url.Action("GetListProductByCategory","Product", new { @categoryName = ViewBag.CategoryName,@manufacturerId = ViewBag.ManufacturerId,@minPrice =200,@maxPrice=500 })">$200 - $500</a>
                                    </li>
                                    <li>
                                        <a href="@Url.Action("GetListProductByCategory","Product", new { @categoryName = ViewBag.CategoryName,@manufacturerId = ViewBag.ManufacturerId,@minPrice =500,@maxPrice=1000 })">$500 - $1000</a>
                                    </li>
                                    <li class="my-1">
                                        <a href="@Url.Action("GetListProductByCategory","Product", new { @categoryName = ViewBag.CategoryName,@manufacturerId = ViewBag.ManufacturerId,@minPrice =1000,@maxPrice=3000 })">$1000 - $3000</a>
                                    </li>
                                    <li>
                                        <a href="@Url.Action("GetListProductByCategory","Product", new { @categoryName = ViewBag.CategoryName,@manufacturerId = ViewBag.ManufacturerId,@minPrice =3000,@maxPrice=5000 })">$3000 - $5000</a>
                                    </li>
                                    <li class="mt-1">
                                        <a href="@Url.Action("GetListProductByCategory","Product", new { @categoryName = ViewBag.CategoryName,@manufacturerId = ViewBag.ManufacturerId,@minPrice=5000 })">Over $5000</a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                        <!-- //price -->
                    </div>
                    <!-- //product right -->
                </div>
            </div>
        </div>
    </div>
    <!-- //top products -->
</div>
