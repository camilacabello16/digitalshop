@model DigitalShop.Models.CustomerViewModel
@Html.AntiForgeryToken()
<!DOCTYPE html>
<html>
<head>
    <body>
        <form id="frmCustomerInfo">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title text-center">Customer Infomation</h5>
                        <button type="button" class="close" data-dismiss="modal">&times;</button>

                    </div>
                    <div class="modal-body">
                        <div class="form-horizontal">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                                @Html.Label("User Name", null, htmlAttributes: new { @class = "col-form-label" })
                                <div class="col-md-10">
                                    @Html.TextBoxFor(model => model.Id, new { @class = "hidden", @type = "hidden" })
                                    @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.Label("Display Name", null, htmlAttributes: new { @class = "col-form-label" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.DisplayName, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.Label("Phone", null, htmlAttributes: new { @class = "col-form-label" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.Label("Address", null, htmlAttributes: new { @class = "col-form-label" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                            </div>
                            <p>Confirm new password if you want change password :</p>
                            <div class="form-group">
                                @Html.Label("PassWord", null, htmlAttributes: new { @class = "col-form-label" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.PassWord, new { htmlAttributes = new { @class = "form-control", @type = "password" } })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.Label("Confirm PassWord", null, htmlAttributes: new { @class = "col-form-label" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.ConfirmPassWord, new { htmlAttributes = new { @class = "form-control", @type = "password" } })
                                </div>
                            </div>

                            <div class="modal-footer">
                                <button type="button" disabled onclick="saveCustomerInfo()" class="btn btn-default" data-dismiss="modal" id="btnSaveCustomerInfo">Save</button>
                                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
        <script src="~/js/jquery.validate.min.js"></script>
        <script src="~/js/FormValidation/customerInfoValidation.js"></script>
        <script type="text/javascript">
            $(document).ready(function () {
                console.log($("#frmCustomerInfo").valid());
                $("#frmCustomerInfo").keyup(function () {
                    if ($("#frmCustomerInfo").valid()) {
                        $('#btnSaveCustomerInfo').prop('disabled', false);
                    }
                    else {
                        $('#btnSaveCustomerInfo').prop('disabled', true);
                    }
                });

            });

        </script>
    </body>
    </head>
</html>
